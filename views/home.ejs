<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="./output.css" />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <%- include('../partials/nav') %>
    <main>
      <h1 class="text-2xl sm:text-3xl font-bold text-center m-5">
        Here are registered homes
      </h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-xl shadow-md overflow-hidden m-7">
          <img src="<%= home.Photo %>" class="w-full h-48 object-cover" />
          <div class="p-4">
            <p class="text-lg font-semibold"><%= home.Name %></p>
            <p class="text-gray-600"><%= home.Location %></p>
            <p class="text-red-500 font-bold"><%= home.Price %>/Night</p>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
